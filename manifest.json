{
    "manifest_version": 3,
    "name": "Headers Manager",
    "version": "1.0.3",
    "description": "Manage HTTP request headers with URL-based rules.",
    "homepage_url": "https://github.com/arabcoders/headers-manager-extension",
    "permissions": [
        "declarativeNetRequest",
        "storage",
        "activeTab",
        "scripting"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js",
        "scripts":[
            "background.js"
        ]
    },
    "action": {
        "default_popup": "popup.html",
        "default_title": "Headers Manager"
    },
    "options_page": "options.html",
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "headers_manager@arabcoders.org",
            "strict_min_version": "128.0",
            "data_collection_permissions": {
                "required": [
                    "none"
                ]
            }
        }
    }
}